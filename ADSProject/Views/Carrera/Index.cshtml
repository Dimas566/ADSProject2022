@model IEnumerable<ADSProject.Models.CarreraViewModel>
@using ADSProject.Utils

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-6">
                <h3>Index</h3>
            </div>
            <div class="col-sm-6">
                <a class = "btn btn-success d-block" asp-action = "Form" asp-route-operaciones = "@Operaciones.agregar">Agregar carrera</a>
            </div>
        </div>
    </div>
    <div class="col-sm-12">
        @if(Model.Count() > 0)
        {
             <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.idCarrera)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.codigoCarrera)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.nombreCarrera)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.idCarrera)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.codigoCarrera)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombreCarrera)
                        </td>
                        <td>
                            <a class = "btn btn-primary" asp-route-idCarrera = "@item.idCarrera" asp-route-operaciones = "@Operaciones.modificar" asp-action = "Form">Modificar</a>
                            <a class = "btn btn-warning" asp-route-idCarrera = "@item.idCarrera" asp-route-operaciones = "@Operaciones.leer" asp-action = "Form">Leer</a>
                            <a class = "btn btn-danger eliminar" asp-route-idCarrera = "@item.idCarrera" asp-action = "Form" asp-route-operaicones = "@Operaciones.eliminar">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
            </table>
        } else
        {
            <h3 class = "text-center">Lista vacia.</h3>
        }

    </div>
</div>